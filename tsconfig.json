{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "baseUrl": "./",
    "paths": {
      "@common/*": ["./common/*"],
      "@src/*": ["./src/*"],
      "@typings/*": ["./typings/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
