{
  "name": "i18n-manager",
  "version": "1.0.0",
  "main": "build/main/index.js",
  "license": "MIT",
  "module": "commonjs",
  "scripts": {
    "start": "yarn clean && concurrently \"yarn watch-electron\" \"BROWSER=none yarn start-web\" \"wait-on http://localhost:1234 && electron .\"",
    "build": "yarn build-all && electron-builder",
    "test:watch": "jest --watch",
    "test": "jest --ci --coverage && cat ./coverage/lcov.info | codacy-coverage --language typescript",
    "start-web": "parcel ./renderer/index.html -d build/view",
    "build-web": "parcel build ./renderer/index.html -d build/view",
    "build-electron": "tsc --outDir ./build -d -p ./main",
    "watch-electron": "tsc --outDir ./build -w -p ./main",
    "build-all": "yarn clean && concurrently \"yarn build-electron\" \"yarn build-web\"",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf build dist"
  },
  "devDependencies": {
    "@sentry/cli": "^1.35.1",
    "@types/electron-devtools-installer": "^2.2.0",
    "codacy-coverage": "^3.0.0",
    "concurrently": "^4.0.0",
    "cross-env": "^5.2.0",
    "electron": "^2.0.8",
    "electron-builder": "^20.28.2",
    "electron-devtools-installer": "^2.2.4",
    "electron-download": "^4.1.1",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.0",
    "jest": "^23.5.0",
    "parcel-bundler": "^1.9.7",
    "rimraf": "^2.6.2",
    "spectron": "^3.8.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.10.0",
    "typescript": "^3.0.1",
    "wait-on": "^2.1.0"
  },
  "dependencies": {
    "@sentry/electron": "^0.8.1",
    "@types/color": "^3.0.0",
    "@types/electron-is-dev": "^0.3.0",
    "@types/enzyme": "^3.1.13",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.116",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "@types/react-redux": "^6.0.6",
    "@types/react-router-dom": "^4.3.0",
    "@types/redux-actions": "^2.3.0",
    "bootstrap": "4.1.3",
    "color": "^3.0.0",
    "electron-is-dev": "^0.3.0",
    "electron-reload": "^1.2.5",
    "emotion": "^9.2.6",
    "immutable": "^3.8.2",
    "jquery": "^3.3.1",
    "lodash": "^4.17.10",
    "popper.js": "^1.14.4",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-emotion": "^9.2.6",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.0",
    "redux-actions": "^2.6.1",
    "redux-devtools-extension": "^2.13.5",
    "redux-saga": "^0.16.0"
  },
  "alias": {
    "~": "./renderer"
  },
  "build": {
    "appId": "com.i18n-manager.app",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/renderer/$1"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "projects": [
      "./main",
      "./renderer"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js}",
      "!**/*.d.ts",
      "!**/jest.setup.ts",
      "!**/jest.config.js"
    ]
  }
}
