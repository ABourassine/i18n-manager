{
  "name": "i18n-manager",
  "version": "1.0.0",
  "main": "build/electron/index.js",
  "license": "MIT",
  "scripts": {
    "start": "yarn clean && concurrently \"yarn watch-electron\" \"BROWSER=none yarn start-web\" \"wait-on http://localhost:1234 && electron .\"",
    "build": "yarn build-all && electron-builder",
    "start-web": "parcel ./renderer/index.html -d build/view",
    "build-web": "parcel build ./renderer/index.html -d build/view",
    "build-electron": "tsc --outDir ./build -d -p ./electron",
    "watch-electron": "tsc --outDir ./build -w -p ./electron",
    "build-all": "yarn clean && concurrently \"yarn build-electron\" \"yarn build-web\"",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf build dist"
  },
  "devDependencies": {
    "@types/color": "^3.0.0",
    "@types/electron-is-dev": "^0.3.0",
    "@types/lodash": "^4.14.116",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "concurrently": "^3.6.1",
    "cross-env": "^5.2.0",
    "electron": "^2.0.8",
    "electron-builder": "^20.28.2",
    "parcel-bundler": "^1.9.7",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.10.0",
    "typescript": "^3.0.1",
    "wait-on": "^2.1.0"
  },
  "dependencies": {
    "bootstrap": "4.1.3",
    "color": "^3.0.0",
    "electron-is-dev": "^0.3.0",
    "electron-reload": "^1.2.5",
    "emotion": "^9.2.6",
    "immutable": "^3.8.2",
    "jquery": "^3.3.1",
    "lodash": "^4.17.10",
    "popper.js": "^1.14.4",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-emotion": "^9.2.6",
    "react-helmet": "^5.2.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.0",
    "redux-actions": "^2.6.1",
    "redux-saga": "^0.16.0"
  },
  "alias": {
    "~": "./renderer"
  },
  "build": {
    "appId": "com.i18n-manager.app",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
